<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="instagram.photo.video.downloader.story.saver.data.scanMedia.GalleryModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/purple_500">

        <View
            android:id="@+id/viewCenter"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintTop_toTopOf="@+id/imgPreview"
            app:layout_constraintBottom_toBottomOf="@+id/imgPreview"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPreview"
            loadThumb="@{model}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            loadTimeVideo="@{model.duration}"
            app:layout_constraintTop_toTopOf="@+id/imgPreview"
            app:layout_constraintBottom_toBottomOf="@+id/viewCenter"
            android:background="@drawable/shape_fade_gallery_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            loadTimeVideo="@{model.duration}"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_video" />

        <androidx.appcompat.widget.AppCompatTextView
            loadTimeVideo="@{model.duration}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:fontFamily="@font/san_m"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
            app:layout_constraintEnd_toStartOf="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="@+id/appCompatImageView"
            tools:text="00:00" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>